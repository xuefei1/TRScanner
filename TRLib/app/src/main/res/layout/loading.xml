        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5.0dip">
        <TextView
            android:id="@+id/loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15.0dip"
            android:textColor="#ffffffff"
            android:text="loading···"  />
    </LinearLayout>
</LinearLayout>